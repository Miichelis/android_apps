<MyLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calculator_input
            text: "0"
            halign: "right"
            font_size: sp(65)
            size_hint: (1, 0.15)
            multiline: False
            keyboard: False

        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "C"
                on_press: root.clear()



            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "<<"
                on_press: root.backspace()

            Button:
                id: clear
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "%"

                on_press: root.percent()

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "/"
                on_press: root.actions("/")


            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "7"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(7)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "8"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(8)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "9"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(9)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "x"
                on_press: root.actions("*")

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "4"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(4)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "5"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(5)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "6"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(6)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "-"
                on_press: root.actions("-")

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "1"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(1)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "2"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(2)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "3"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(3)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "+"
                on_press: root.actions("+")

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "+/-"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.plus_minus()

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "0"
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.number_press(0)

            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "."
                background_color: (163, 160, 161, 0.8)
                color: (0, 0, 0, 1)
                on_press: root.dot()


            Button:
                size_hint: (0.2, 0.2)
                font_size: sp(32)
                text: "="
                background_color: (169,169,169,.6)
                on_press: root.equals()






















